<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wyh.cloudmusic">

    <application
        android:name=".init.MyApplication"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ShopActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.VipActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FreeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ListenmusicActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SkinActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.NightActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.TimeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ClockActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CarActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CloudActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LocalMusicActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.RecentlyPlayActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.DownloadActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MySingerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.MyRadioStationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.MediaPlayActivity">

        </activity>
        <activity android:name=".activity.BottomMusicActivity" />

        <service android:name=".service.PlayerService">
            <intent-filter>
                <action android:name="com.wyh.media.MUSIC_SERVICE" />
            </intent-filter>
        </service>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
</manifest>
